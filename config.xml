<?xml version='1.0' encoding='utf-8'?>
<widget id="de.mobilexag.encoding" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>EncodingBugApp</name>
    <description>
        A Cordova project to reproduce utf-8 encoding bug in the cordova-file-plugin
    </description>
    <author email="chau.thai@mobilexag.de" href="http://www.mobilexag.de">
        Chau Thai
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="SplashScreen" value="screen" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="FadeSplashScreen" value="true" />
    <preference name="FadeSplashScreenDuration" value="300" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <platform name="android">
        <preference name="AutoHideSplashScreen" value="false" />
        <preference name="android-targetSdkVersion" value="26" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <preference name="AutoHideSplashScreen" value="false" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="StatusBarOverlaysWebView" value="false" />
        <preference name="StatusBarBackgroundColor" value="#204056" />
        <preference name="StatusBarStyle" value="lightcontent" />
        <preference name="DisallowOverscroll" value="true" />
        <preference name="Orientation" value="all" />
        <preference name="KeyboardDisplayRequiresUserAction" value="false" />
    </platform>
    <platform name="windows">
        <preference name="windows-target-version" value="10.0" />
    </platform>
    <plugin name="cordova-plugin-file" spec="^5.0.0" />
    <engine name="android" spec="^6.3.0" />
    <engine name="ios" spec="^4.5.2" />
    <engine name="windows" spec="^6.0.0" />
</widget>
